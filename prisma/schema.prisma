generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  TRAINER
  TRAINEE
}

model User {
  id              String            @id @default(cuid())
  email           String            @unique
  name            String?
  password        String?
  roles           Role[]            @default([TRAINEE])
  createdAt       DateTime          @default(now())
  
  // Trainer fields
  asTrainer       TrainerTrainee[]  @relation("AsTrainer")
  asTrainee       TrainerTrainee[]  @relation("AsTrainee")
  
  // Data
  routines        Routine[]
  bodyCompositions BodyComposition[]
  workoutLogs     WorkoutLog[]
}

model TrainerTrainee {
  id        String   @id @default(cuid())
  trainerId String
  traineeId String
  trainer   User     @relation("AsTrainer", fields: [trainerId], references: [id])
  trainee   User     @relation("AsTrainee", fields: [traineeId], references: [id])
  assignedAt DateTime @default(now())

  @@unique([trainerId, traineeId])
  @@index([trainerId])
  @@index([traineeId])
}

model BodyComposition {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  weight      Float
  bodyFat     Float?
  muscleMass  Float?
  date        DateTime @default(now())
}

model Routine {
  id          String            @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  userId      String
  user        User              @relation(fields: [userId], references: [id])
  days        RoutineDay[]
  workoutLogs WorkoutLog[]
}

model RoutineDay {
  id        String            @id @default(cuid())
  name      String
  order     Int               @default(0)
  routineId String
  routine   Routine           @relation(fields: [routineId], references: [id], onDelete: Cascade)
  exercises RoutineExercise[]

  @@index([routineId])
}

model Exercise {
  id          String            @id @default(cuid())
  name        String
  description String?
  videoUrl    String?
  bodyParts   String[]
  routines    RoutineExercise[]
  workoutLogs WorkoutExerciseLog[]
}

model RoutineExercise {
  id           String     @id @default(cuid())
  routineDayId String
  exerciseId   String
  sets         Int?
  reps         String?
  order        Int        @default(0)
  routineDay   RoutineDay @relation(fields: [routineDayId], references: [id], onDelete: Cascade)
  exercise     Exercise   @relation(fields: [exerciseId], references: [id])

  @@index([routineDayId])
  @@index([exerciseId])
}

model WorkoutLog {
  id          String               @id @default(cuid())
  userId      String
  user        User                 @relation(fields: [userId], references: [id])
  routineId   String?
  routine     Routine?             @relation(fields: [routineId], references: [id])
  date        DateTime             @default(now())
  exercises   WorkoutExerciseLog[]
}

model WorkoutExerciseLog {
  id           String     @id @default(cuid())
  workoutLogId String
  workoutLog   WorkoutLog @relation(fields: [workoutLogId], references: [id], onDelete: Cascade)
  exerciseId   String
  exercise     Exercise   @relation(fields: [exerciseId], references: [id])
  setNumber    Int
  reps         Int
  weight       Float
  
  @@index([workoutLogId])
  @@index([exerciseId])
}
